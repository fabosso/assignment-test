{
  "name": "Python Assignment Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  // Only install specific extensions - no AI assistants
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python", // Python extension for syntax checking
        "ms-python.vscode-pylance", // Python language server
        "ms-python.flake8" // Linting
      ],
      "settings": {
        // Disable all AI-related features
        "github.copilot.enable": false,
        "github.copilot.chat.enabled": false,
        "python.analysis.autoImportCompletions": false,
        "python.analysis.includeAllSymbols": false,
        // Enable syntax checking
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.linting.pylintEnabled": false,
        "python.languageServer": "Pylance",
        // Disable IntelliSense suggestions to prevent AI-like help
        "editor.quickSuggestions": {
          "other": false,
          "comments": false,
          "strings": false
        },
        "editor.suggestOnTriggerCharacters": false,
        "editor.parameterHints.enabled": false,
        "editor.hover.enabled": true, // Keep hover for error messages
        // Show syntax errors clearly
        "python.analysis.typeCheckingMode": "basic",
        "problems.decorations.enabled": true
      }
    }
  },
  // Install Python packages
  "postCreateCommand": "bash .devcontainer/postCreateCommand.sh",
  // Features to include
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  }
}